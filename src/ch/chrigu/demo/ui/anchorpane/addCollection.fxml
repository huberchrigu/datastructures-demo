<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="180.0"
            prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ch.chrigu.demo.ui.anchorpane.AddCollectionController">
    <VBox>
        <children>
            <HBox>
                <children>
                    <Label text="Type">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <ChoiceBox fx:id="type"/>
                </children>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </HBox>
            <HBox>
                <children>
                    <Label text="Initial capacity">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Label>
                    <TextField fx:id="capacity" prefWidth="100.0"/>
                </children>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </HBox>
            <HBox>
                <children>
                    <CheckBox fx:id="synchronizedCollection" mnemonicParsing="false" text="Synchronized"/>
                </children>
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </HBox>
            <HBox>
                <children>
                    <Button mnemonicParsing="false" onAction="#add" text="Add">
                        <HBox.margin>
                            <Insets right="10.0"/>
                        </HBox.margin>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#cancel" text="Cancel"/>
                </children>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
            </HBox>
        </children>
    </VBox>
</AnchorPane>
